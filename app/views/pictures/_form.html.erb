	<div class="errors">
			<%= flash[:error] %>	
	</div>

	<%= form_for @picture do |f| %>
		<p>
			<label>Title</label><br>
			<div class="errors"><%= @picture.errors[:title].join(", ") %></div>	
			<%= f.text_field "title" %>	
		</p>
		<p>
			<label>Artist</label><br>
			<%= f.text_field "artist" %>
		</p>
		<p>
			<label>URL</label><br>
			<div class="errors"><%= @picture.errors[:url].join(", ") %></div>
			<%= f.text_field "url" %>
		</p>
		<p>
			<%= f.submit "Save" %>
		</p>

	<% end %>